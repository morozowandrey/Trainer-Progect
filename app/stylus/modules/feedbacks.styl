.feedbacks {
    padding-bottom: 70px;

    &-heading {
        font-weight: 400;
        font-size: 4rem;
        margin: 0 0 70px 0;
        padding-top: 70px;

        text-align: center;
    }

    &-slider {

    }
}

.feedback {

    &-content {
        float: left;
        width: 50%;
    }

    &-img {
        float: left;
        width: 50%;
    }

    &-heading {
        font-size: 22px;
        margin-bottom: 40px;
    }

    &-text {
        margin-bottom: 20px;
        padding-right: 5px;

        font-size: 18px;
        line-height: 1.3;
    }

    &-link {
        font-size: 10px;
        text-transform: uppercase;
        color: main-black;
        text-decoration: underline;
    }

    &-link:hover {
        color: main-black;
    }
}

#feedback-img_left {
    display: inline-block;
}

#feedback-img_right {
    display: inline-block;

}

@media screen and (max-width: 900px) {
    .feedbacks {
        padding: 0 20px;
    }

    .feedback-content {
        float: left;
        width: 100%;
    }

    .feedbacks-heading {
        margin: 0 0 30px 0;
    }

    .feedback-img {
        width: 100%;
        margin-top: 30px;
        text-align: center;
    }
}