.products {
    // background-color: gray-light;

    &-container {

    }

    &-heading {
        padding: 65px 0 35px;
        margin: 0;
        text-align: center;
        font-size: 40px;
    }
}

.product {
    width: 33%;
    height: 310px;
    float: left;

    position: relative;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;

    margin-bottom: 55px;

    &-discription {
        display: none;

        position: absolute;
        bottom: 8%;
        z-index: 5;

        height: 175px;
        width: 190px;

        padding: 30px 0px 30px 15px;

        border: 1px solid gray;
        border-radius: 3px;

        font-size: 13px;
        line-height: 1.2;
        letter-spacing: -1px;

        background-color: gray-light2;
    }

    &-name {
        margin: 30px 0 60px;
        font-size: 15px;

        &_wrapper {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;

            &_mt {
                margin-top: 80px;
            }
        }

        &_center {
            text-align: center;
        }

        &_mb {
            margin-bottom: 35px;
        }
    }

    &-img {

        &_size {
            width: 120px;
            height: 195px;
        }
    }
}

.product-img:hover {
    cursor: pointer;
}

.product-img:hover + .product-discription {
        display: flex;
    }

.product-pak {
    width: 100%;
    // height: 310px;

    position: relative;

    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;

    margin-bottom: 50px;
}

@media screen and (max-width: 640px) {
    .product {
        width: 50%;
    }
}

@media screen and (max-width: 420px) {
    .product {
        width: 100%;
    }
}