.training {
    padding: 0px 20px;
    padding-bottom: 120px;

    &-trainer {
        margin: 190px 0 0 0;
        height: inherit;

        &_mobile {
            display: none;
        }
    }

    &-plans {

        &-box {
            margin: 15% 0 0 0;
            width: 57.5%;

            -webkit-box-shadow: 0px 0px 40px 0px rgba(0,0,0,0.3);
            -moz-box-shadow: 0px 0px 40px 0px rgba(0,0,0,0.3);
            box-shadow: 0px 0px 40px 0px rgba(0,0,0,0.3);
        }
    }

    &-plans:first-of-type {
        
    }

    &-plan {

        &-box {
            width: 466px;

            background-color: light-blue;
            border-right: 3px solid #4d85c7;

            display: flex;
            height: inherit;
        }

        &-box:nth-child(2) {
            border-right: 3px solid pink;
        }

        &-box:nth-child(3) {
            border-right: 3px solid yello;
        }
    }
}
.plan {
    // border-right: 3px solid blue;

    &-heading {
        display: flex;
        align-items: center;
        justify-content: space-between;

        margin: 45px 0 30px 0;

        &__caption {
            margin: 0;
            font-size: 18px;
        }

        &__price {
            background-color: blue;
            border-radius: 5px 0 0 5px;
            padding: 0px 5px;   
        }
        &__price_second {
            background-color: pink;
            border-radius: 5px 0 0 5px;
            padding: 0px 5px;   
        }
        &__price_third {
            background-color: yello;
            border-radius: 5px 0 0 5px;
            padding: 0px 5px;   
        }
    }

    &-text {
        margin: 0 0 10px 0;
        padding-right: 7%;

        font-size: 10px;
        line-height: 1.3;

    }

    &-img {
        width: 200px;
        float: left;
        margin: 45px 20px 0 25px;
    }

    &_lust {
        padding-bottom: 40px;
    }
}

@media screen and (max-width: 850px) {

    .training {
        flex-direction: column;
        align-items: center;
    }

    .training-trainer_mobile {
        display: inherit;

        width: 320px;

        margin: 0 auto;
        margin-top: 10%;
    }
    .training-trainer {
        display: none;
    }

    .training-plans-box {
        margin: 0;
        width: inherit;
    }
}

@media screen and (max-width: 520px) {

   .training-plan-box {
        width: 100%;
    }

    .plan {
        display: flex;
        padding: 0 20px;
        flex-direction: column;
    }

    .plan-img {
        float: left;
        margin: 0;
        padding: 20px 0;
        width: 100%;
    }

    .plan-heading {
        margin: 15px 0 30px 0;
    }

    .plan-heading {
        padding-right: 0;
    }

    .plan-vievButton {
        margin: 0;
    }
}