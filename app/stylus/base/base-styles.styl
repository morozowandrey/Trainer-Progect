*{
  box-sizing: border-box;
  transition: all .2s;
}

html { 
    font-family: main-ff;
    font-size: 16px;
    line-height: 22px;
    height: 100%;
}
body {
  margin: 0;
    font-family: main-ff !important;
}

img {
  max-width: 100%;
}

.wrapper{
    max-width: 850px;
    margin: 0 auto;
    height: 100%;
}

.flex {
  display: flex;
}

.clearfix:after { 
   content: '.';
   visibility: hidden;
   display: block;
   height: 0;
   clear: both;
   font-size: 0;
}

h1, h2, h3, h4, h5, p{
    margin: 0;
}

a {
  text-decoration: none;
}
a:focus {
  text-decoration: none;
  outline: none;
}
